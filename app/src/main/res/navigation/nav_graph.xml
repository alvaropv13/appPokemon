<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokedexFragment">

    <fragment
        android:id="@+id/pokedexFragment"
        android:name="com.alvaropv13.apppokemon.PokedexFragment"
        android:label="Pokedex"
        tools:layout="@layout/fragment_pokedex">

        <action
            android:id="@+id/action_pokedexFragment_to_favPokemonFragment"
            app:destination="@id/favPokemonFragment" />

        <action
            android:id="@+id/action_pokedexFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.alvaropv13.apppokemon.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details"/>

    <fragment
        android:id="@+id/favPokemonFragment"
        android:name="com.alvaropv13.apppokemon.FavPokemonFragment"
        tools:layout="@layout/fragment_fav_pokemon"
        android:label="Favoritos">
        <action
            android:id="@+id/action_favPokemonFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

</navigation>